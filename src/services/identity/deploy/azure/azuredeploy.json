{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "appServiceName": {
      "type": "string"
    },
    "existingPlanName": {
      "type": "string"
    },
    "dockerImageName": {
      "type": "string",
      "metadata": {
        "description": "_MY_REGISTRY_USERNAME_.azurecr.io/_MY_NAMESPACE_/_MY_DOCKER_IMAGE_NAME_:_TAG_"
      }
    },
    "dockerRegistryUrl": {
      "type": "string",
      "metadata": {
        "description": "https://_MY_REGISTRY_USERNAME_.azurecr.io"
      }
    },
    "dockerRegistryUsername": {
      "type": "string"
    },
    "dockerRegistryPassword": {
      "type": "securestring"
    },
    "appSettings": {
      "type": "array"
    }
  },
  "variables": {
    "defaultAppSettings": [
      {
        "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
        "value": "false"
      },
      {
        "name": "DOCKER_REGISTRY_SERVER_URL",
        "value": "[parameters('dockerRegistryUrl')]"
      },
      {
        "name": "DOCKER_REGISTRY_SERVER_USERNAME",
        "value": "[parameters('dockerRegistryUsername')]"
      },
      {
        "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
        "value": "[parameters('dockerRegistryPassword')]"
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "name": "[parameters('appServiceName')]",
      "kind": "app,linux,container",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "properties": {
        "name": "[parameters('appServiceName')]",
        "siteConfig": {
          "linuxFxVersion": "[concat('DOCKER|', parameters('dockerImageName'))]",
          "alwaysOn": true,
          "appSettings": "[union(parameters('appSettings'), variables('defaultAppSettings'))]"
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('existingPlanName'))]"
      }
    }
  ]
}