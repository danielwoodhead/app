@page
@model IndexModel

@{
    ViewData["Title"] = "API Resources";
}

<h1>API Resources</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApiResources[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ApiResources) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Name">Edit</a> |
                <a asp-page="Details" asp-route-id="@item.Name">Details</a> |
                <a asp-page="Delete" asp-route-id="@item.Name">Delete</a> |
            </td>
        </tr>
}
    </tbody>
</table>
